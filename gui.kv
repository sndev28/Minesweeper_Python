#:kivy 2.0

Screen:

    BoxLayout:
        orientation:'vertical'
        pos_hint: {'center_x': .5}
        padding: 20

        

        GridLayout:
            cols: 2
            size_hint: (1, .20)

            Label:
                text: 'Minesweeper'
                font_size: 32

            Label:
                id: timer
                text: 'Time: -' 
        
        GridLayout:
            id: game_area
            cols: 22
            rows: 26

        Label:
            id:progress
            text: 'Game not started yet!'
            size_hint: (1, .05)
            valign: 'bottom'
            
        Button:
            id: solver
            text: 'Computer solve!'
            on_press: app.solver()
            pos_hint: {'center_x':.5}
            size_hint: (.30, .05)



        


